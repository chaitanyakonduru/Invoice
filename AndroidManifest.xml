<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.invoiceapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="InvoiceApplication">
        <activity
            android:name="com.example.invoiceapp.LoginScreenActivity"
            android:label="@string/app_name" android:theme="@style/Theme.Example" android:windowSoftInputMode="adjustUnspecified|adjustResize"><intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="BreadListActivity" android:theme="@style/Theme.Example"></activity>
        <activity android:name="PreviewBreadListActivity" android:theme="@style/Theme.Example"></activity>
        <activity android:name="OrderConfirmationActivity" android:theme="@style/Theme.Example"></activity>
        <activity android:name="CustomerListActivity" android:theme="@style/Theme.Example"></activity>
        <activity android:name="CustomerActivity" android:theme="@style/Theme.Example"></activity>
        <activity android:name="HomeScreenActivity" android:theme="@style/Theme.Example"></activity>
        <activity android:name="PurchaseActivity"></activity>
        <activity android:name="RoutesActivity"></activity>
    </application>

</manifest>
