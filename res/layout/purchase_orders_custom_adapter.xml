<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ordered_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Name"
        android:textColor="@color/actionbar_bg_brick_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ordered_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Qty Ordered"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/purchased_qty_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Qty Taken"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/purchased_qty_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:visibility="gone" />
    
      <TextView
        android:id="@+id/returned_qty_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Qty Return"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/returned_qty_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:visibility="gone" />

</LinearLayout>